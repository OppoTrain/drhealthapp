{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.json"],
    "tsconfigRootDir": __dirname
  },
  "extends": [
    "next/core-web-vitals", // This includes TypeScript and recommended rules
    "eslint:recommended",  // It's generally a good idea to keep this for base ESLint rules
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended" // Make sure prettier is last
  ],
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off"
    // ... any other custom rules ...
  }
}
